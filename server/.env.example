# Odin's Eye Restaurant Intelligence Platform
# Azure Cosmos DB and Node.js Environment Configuration

# Azure Cosmos DB Configuration (Required)
AZURE_COSMOS_ENDPOINT=https://your-cosmosdb-account.documents.azure.com:443/

# Azure AD B2C Authentication Configuration
AZURE_B2C_TENANT_NAME=your-tenant-name
AZURE_B2C_CLIENT_ID=your-client-id-from-app-registration
AZURE_B2C_POLICY_NAME=B2C_1_susi
AZURE_B2C_TENANT_ID=your-tenant-id
AZURE_B2C_REDIRECT_URI=http://localhost:3000/auth/callback
AZURE_B2C_LOGOUT_URI=http://localhost:3000

# Azure Authentication (Managed Identity - Recommended)
# No keys needed when using managed identity in Azure App Service/Container Apps
# For local development, use Azure CLI: az login

# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Database Configuration
DB_NAME=OdinsEye
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY_MS=1000

# Viking Battle Intelligence Configuration
BATTLE_STATS_UPDATE_INTERVAL_MS=300000
VARIANCE_ALERT_THRESHOLD_PERCENT=15
PAR_LEVEL_CONFIDENCE_THRESHOLD=0.85

# External Data Integration (Optional)
WEATHER_API_KEY=your_weather_api_key
EVENTS_API_KEY=your_events_api_key

# Feature Flags
ENABLE_PREDICTIVE_PAR_LEVELS=true
ENABLE_ACTUAL_VS_THEORETICAL=true
ENABLE_GENERATIVE_AI_INVENTORY=true
ENABLE_EXTERNAL_FACTORS=true