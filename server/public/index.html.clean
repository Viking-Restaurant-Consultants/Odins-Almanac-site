<script>
  // Pricing plan configuration
  const pricingPlans = {
    starter: { name: 'Starter', price: '$45/month', priceId: 'price_starter_45' },
    pro: { name: 'Pro', price: '$100/month', priceId: 'price_pro_100' },
    platinum: { name: 'Platinum', price: '$199/month', priceId: 'price_platinum_199' },
    enterprise: { name: 'Enterprise', price: '$400/month', priceId: 'price_enterprise_400' }
  };

  // Handle pricing button clicks
  document.querySelectorAll('.pricing-button').forEach(button => {
    button.addEventListener('click', async (e) => {
      const plan = e.target.getAttribute('data-plan');
      
      if (plan === 'enterprise') {
        // Handle enterprise contact
        alert('Thank you for your interest in Enterprise! Our team will contact you within 24 hours to discuss your custom solution.');
        return;
      }
      
      try {
        const originalText = e.target.textContent;
        e.target.textContent = 'Starting Trial...';
        e.target.disabled = true;
        
        const planData = pricingPlans[plan];
        const resp = await fetch('/api/stripe/create-checkout-session', { 
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ 
            plan: plan,
            priceId: planData.priceId,
            planName: planData.name 
          })
        });
        
        const data = await resp.json();
        
        if (data?.url) {
          window.location = data.url;
        } else {
          alert(`Ready to start with ${planData.name} at ${planData.price}? Contact our team to begin your 14-day free trial.`);
          console.error('Checkout response:', data);
        }
      } catch (e) {
        const planData = pricingPlans[plan];
        alert(`Let's get you started with ${planData.name}! Please contact our team for immediate setup.`);
        console.error('Network error:', e);
      } finally {
        e.target.textContent = originalText;
        e.target.disabled = false;
      }
    });
  });

  // Handle legacy subscribe buttons (for backwards compatibility)
  document.querySelectorAll('#subscribe').forEach(button => {
